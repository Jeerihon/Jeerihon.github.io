block content
  // hero section
  section.hero__container
    .hero__socials
      ul.socials__list
        -
          var socials = [
          { name: 'vk', href: 'https://vk.com/mrjeerihon'},
          { name: 'github', href: 'https://github.com/Jeerihon'},
          { name: 'in', href: 'https://www.linkedin.com/in/artem-korytov-4488ab177/'}
          ]

        each item in socials
          li.socials__item
            a(href=`${item.href}`).socials__link
              +icon(`${item.name}`, 'social__img')
    .hero__menu
      .burger-btn
        .burger-btn__elem
    .hero__title
      +icon('portfolio_header', 'hero__pic')
    .hero__content
      +user('Блог', 'title title--color-white', 'Статьи, которые я написал', 'user__desc')
    .hero__arrow-down
      +icon('arrow_down', 'arrow-down__pic' )
  section.blog
    .block__triangle.triangle__container
      .triangle.triangle--left
        svg(viewBox="0 0 1200 300" preserveAspectRatio="none").triangle-pic.triangle-pic--blog
          polygon(points='0,0 0,300 1200,300 1200,280')
      .triangle.triangle--right
        svg(viewBox="0 0 1200 300" preserveAspectRatio="none").triangle-pic.triangle-pic--blog
          polygon(points='1200,50 1200,300 0,300 0,280')
    .blog__container
      .blog__titles
        ul.titles__list
          each article in articles
            li.titles__item
              span.titles__text #{article.title}
      .blog__articles
        ul.articles__list
          each article in articles
            li.articles__item
              h3.articles__title #{article.title}
              date.articles__date #{article.date}
              .articles__content !{article.content}



